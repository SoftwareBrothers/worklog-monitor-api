{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Related to ts2497
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
